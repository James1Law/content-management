rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Images folder - admin can upload, anyone can read
    match /images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.email == 'officerjlaw@gmail.com';
    }
  }
}
